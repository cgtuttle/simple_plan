<header class="grd_css">
  <img><%= link_to logo, root_path %></img>
  <div class="header_flash">
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"> <%= value %></div>
    <% end %>
  </div>
  <nav>
    <ul>
      <li><%= current_user.profile.fname %> <%= current_user.profile.lname %></li>
      <li> (<%= current_user.role %>) </li>
      <li><%= current_user.account.name %></li>
      <li><%= link_to('Logout', destroy_user_session_path, :method => 'delete') %></li>
      <li><%= link_to "Help", help_path %></li>				
    </ul>
  </nav>
</header>
