<%= form_for [@deal_product, deal_activity] do |f|  %>
  <div class="field">
    <td><%= f.collection_select(:activity_id, @activities, :id, :code) %></td>
    <td><%= f.number_field :rate, :step => 0.01, :class => "number_field" %></td>
    <td><%= f.number_field :volume_allocation, :step => 1, :class => "number_field" %></td>
    <td><%= f.text_field :start_date, :class => "date_field" %></td>
    <td><%= f.text_field :end_date, :class => "date_field" %></td>
  
  
  </div>
  <div class="actions">
    <td>
      <%= f.submit "Submit" %>
    </td>
  </div>

<% end %>
