<h4><%= link_to @deal.program.code, programs_path %> (<%= @deal.program.name %>)
  >> <%= link_to @customer.name, program_deals_path(@program) %></h4>
<h4>Products</h4>
<table>
  <tr>
    <th>Product</th>
    <th>Budgeted<br />Rate</th>
    <th>Volume</th>
    <th>Start</th>
    <th>End</th>
  </tr>
  
  <% @deal_products.each do |product| %>
    <tr>
      <%#TODO: Move path below to "Activities" Link%>
      <td><%= link_to product.product.code, deal_product_deal_activities_path(product) %></td>
      <td><%= product.rate %></td>
      <td><%= product.volume %></td>
      <td><%= product.start_date %></td>
      <td><%= product.end_date %></td>
    </tr>
  <% end %>  
    
  <tr>
    <%= render :partial => 'new', :locals => { :deal_product => @deal.deal_products.new } %>
  </tr>
  
</table>
