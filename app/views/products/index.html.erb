<h2>Products</h2>

  <table>
    <tr>
      <td>Code</td>
      <td>Name</td>
      <td>Description</td>
      <td>Account</td>
      <td></td>
      <td></td>
    </tr>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.code, product %></td>
          <% if !product.name %>
            <td></td>
          <% else %>
            <td><%= product.name %></td>
          <% end %>

          <% if !product.descr %>
            <td />
          <% else %>
            <td><%= product.descr %></td>
          <% end %>

        <td><%= product.account.name %></td>

        <td><%= link_to "Edit", edit_product_path(product) %></td>
        <td><%= link_to "Delete", product, :method => :delete, :confirm => "Please confirm deletion:",
          :title => "Delete #{product.name}" %></td>
        
        
     </tr>
    <% end %>
    <%= render 'new' %>
  </table>
  <br />
  <%= link_to "Import Data", new_import_path(:model => 'Product') %>
