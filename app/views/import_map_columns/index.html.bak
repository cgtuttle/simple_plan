<h4>Import Map Columns for <%= @map.model_name %> </h4>

<h5>Target Columns</h5>

<table>
  <tr>
    <% @map_columns.each do |c| %>
      <td><%= c.table_column.humanize %></td>
    <% end %>
  </tr>
  <% if @import_columns %>
    <tr>
      <% @map_columns.each do |c| %>
          <td><%= select c, :import_column, @import_columns, { :prompt => '-Select-' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<br/>

<% if !@import_columns %>

  <%= render "import_file_selection" %>

<% else %>

  <%= form_tag complete_import_map_import_map_columns_path, :method => :put do %>
  
    <%= submit_tag 'Import', :name => 'import_file' %>
    <%= submit_tag 'Cancel', :name => 'import_file' %>
  <% end %>

<% end %>