<h4><%= @account.name %></h4>
<h4>Total Budget <%= currency_zero(@ttl_cost) %></h4>
<table>
  <tr>
    <th />
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Account</th>
    <th>Start</th>
    <th>End</th>
    <th><%= @service_needed.humanize %></th>
    <th>Budgeted<br />Rate</th>
    <th>Budgeted<br />Volume</th>
    <th>Budgeted<br />Cost</th>
    <th />
    <th />
    
  </tr>
  <% @programs.each do |program| %>
    <tr>

      <td><%= link_to "Deals", program_deals_path(program) %> </td>
      <td><%= program.code %></td>
      <td><%= program.name %> </td>
      <td><%= program.descr %></td>
      <td><%= program.account.name %></td>
      <td><%= program.start_date && program.start_date.to_s(:just_date) %></td>
      <td><%= program.end_date && program.end_date.to_s(:just_date) %></td>
      <td><%= render :partial => "service", :locals => { :program => program } %>
      <div class="number_field">
        <td><%= program.budget_rate && number_to_currency(program.budget_rate) %></td>
        <td><%= program.budget_vol && float_zero(program.budget_vol) %></td>
        <td><%= currency_zero(program.budget_cost) %></td>
      </div>

      <% if program.account_id == current_account.id %>
        <td><%= link_to "Edit", edit_program_path(program) %></td>
        <td><%= link_to "Delete", program, :method => :delete, :confirm => "Please confirm deletion:",
                                                      :title => "Delete #{program.name}" %></td>
      <% else %>
        <td />
        <td />
      <% end %>


    </tr>
  <% end %>
    <tr>
      <%= render 'new' %>
    </tr>
</table>

