<p>Add New Program</p>


    <%= form_for(@program) do |f| %>
      <div class="field">
        <td />
        <td><%= f.text_field :code, :class => "text_field" %></td> 
        <td><%= f.text_field :name, :class => "text_field" %></td> 
        <td><%= f.text_field :descr, :class => "text_field" %></td>
        <td></td>
        <td><%= f.text_field :start_date, :class => "date_field" %></td>
        <td><%= f.text_field :end_date, :class => "date_field" %></td>

        <% if @service_needed == "supplier" %>
            <td><%= f.collection_select(:supplier_id, @suppliers, :id, :name) %></td>
        <% else %>
            <td><%= f.collection_select(:seller_id, @sellers, :id, :name) %></td>
        <% end %>
      </div>

      
      <td><%= f.number_field :budget_rate, :step => 0.01, :class => "number_field" %></td>
      <td><%= f.number_field :budget_vol, :class => "number_field" %></td>
     

      <div class="actions">
        <td>
          <%= f.submit "Submit" %>
        </td>
      </div>
      <td />
      <td />
  
    <% end %>

