


    <%= form_for([@plan, @program]) do |f| %>
      <div class="field">
        <td />
        <td><%= f.text_field :code, :class => "text_field", :value => @new != nil ? @new.code : nil %></td> 
        <td><%= f.text_field :name, :class => "text_field" %></td> 
        <td><%= f.text_field :descr, :class => "text_field" %></td>
        <td></td>
        <td><%= f.text_field :start_date, :class => "date_field" %></td>
        <td><%= f.text_field :end_date, :class => "date_field" %></td>
        <% if @service_needed == "supplier" %>
            <td><%= f.collection_select(:supplier_id, @suppliers, :id, :name, :prompt => "--select one--") %></td>
        <% else %>
            <td><%= f.collection_select(:seller_id, @sellers, :id, :name, :prompt => "--select one--") %></td>
        <% end %>
        <td><%= f.collection_select(:category_id, @categories, :id, :code, :prompt => "--select one--") %></td>            
      </div>
      <td><%= f.number_field :budget_rate, :step => 0.01, :class => "number_field" %></td>
      <td><%= f.number_field :budget_volume, :class => "number_field" %></td>
      <td>
      <div class="actions">
        <%= f.submit "Submit" %>
      </div>     
      </td>
      <td />
      <td />
      <td />
    <% end %>

