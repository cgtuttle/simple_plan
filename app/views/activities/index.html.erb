<h2>Activities</h2>

<%= render 'shared/error_messages' %>

<ul>
	<% @activities.each do |activity| %>
		<li>
			<%= link_to activity.name, activity %>
		</li>
	<% end %>
</ul>

<%= form_for(@activity) do |f| %>
	<div class="field">
		<%= f.label :name, "Add New Activity", :class => "field_label" %><br />
		<%= f.text_field :name %>
	</div>
	<div class="actions">
		<%= f.submit "Submit" %>
	</div>
<% end %>