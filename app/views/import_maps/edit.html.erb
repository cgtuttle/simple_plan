<h2>Edit Map</h2>

<%= form_for(@map) do |f| %>
	<div class="field">
		<%= f.label :name, "Code", :class => "field_label" %><br />
		<%= f.text_field :code %><br/>
	</div>
	<div class="field">
		<%= f.label :name, "Name", :class => "field_label" %><br />
		<%= f.text_field :name %><br/>
	</div>
	<div class="field">
		<%= f.label :name, "Table", :class => "field_label" %><br />
		<%= collection_select(:import_map, :model_name, ImportMap::MODELS.sort, :to_s, :titleize) %><br/>
	</div>
	<div class="actions">
		<%= f.submit "Update" %>
	</div>
<% end %>