<h2>Categories</h2>

<table>
	<tr>
		<td>Code</td>
		<td>Name</td>
		<td>Partner</td>
		<td></td>
		<td></td>
	</tr>
	<% @categories.each do |category| %>
		<tr>
			<td><%= link_to category.code, category %></td>
			<% if !category.name %>
				<td></td>
			<% else %>
				<td><%= category.name %></td>
			<% end %>
			
			<td><%= category.account.name %></td>

			<% if category.account_id == current_account.id %>
				<td><%= link_to "Edit", edit_category_path(category) %></td>
				<td><%= link_to "Delete", category, :method => :delete, :confirm => "Please confirm deletion:",
																						:title => "Delete #{category.name}" %></td>
			<% else %>
				<td />
				<td />
			<% end %>

			
		</tr>
	<% end %>
</table>

<%= render 'new' %>